    private async Task CancelClaim()
    {
        ShowClaimConfirmation = false;
        ShowAddClubConfirmation = false;
        ShowClubEntityForm = false;
        ShowSearchField = true;
    }

    private bool ShowErrors;
    private IEnumerable<string>? Errors;
